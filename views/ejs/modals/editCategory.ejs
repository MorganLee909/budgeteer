<div id="editCategoryModal" class="modal" style="display:none">
    <form id="editCatForm">
        <label>Name
            <input id="editCatName" type="text" required>
        </label>

        <label>Amount
            <input id="editCatAmount" type="number" min="0" step="0.01">
        </label>

        <p id="editCatOr" style="display:none">Or</p>

        <label id="editCatPercentLabel" style="display:none">Percent
            <input type="number" min="0" step="0.01">
        </label>

        <div class="formButton">
            <input type="submit" value="Submit">

            <button type="button" id="editCatCancel">Cancel</button>
        </div>
    </form>
</div>